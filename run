#!/bin/bash
#
# Andrew DeOrio <awdeorio@umich.edu>

# Stop on errors
set -Eeo pipefail

# Print commands
set -x

if [[ -z "$DEPLOY_ENV" ]]; then
    # if env variable not set, run dev servers
    # run frontend server
    cd frontend
    yarn start &
    cd ..

    cd backend
    npx nodemon server.js
else
    # if env variable not set, run dev servers
    # run frontend server
    cd frontend
    yarn start &
    cd ..

    cd backend
    npx nodemon server.js
fi
